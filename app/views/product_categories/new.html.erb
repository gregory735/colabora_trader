<%= render partial: 'home/navbar' %>

<ul>
  <% @product_category.errors.full_messages.each do |message| %>
    <li>
      <%= message %>
    </li>
  <% end %>
</ul>

<%= form_with model: @product_category, local:true do |f| %>
  <div>
    <%= f.label :name, 'Nome da categoria' %>
    <%= f.text_field :name %>
  </div>
  <%= f.submit 'Cadastrar', 
                        data: {confirm: "confirma a criação da nova categoria?"} %>
<% end %>

<%= link_to 'Voltar', root_path %>


<%= render partial: 'home/footer' %>
