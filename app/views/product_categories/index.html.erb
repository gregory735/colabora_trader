<%= render partial: 'home/navbar' %>

<h1>Categorias de produto</h1>
<% if @product_categories.empty? %>
  <h1>Nenhuma categoria cadastrada</h1>
<% end %>

<ul class="list-group">
<% @product_categories.each do |category| %>
    <li class="list-group-item"><%= link_to category.name, category %></li>
<% end %>
</ul>


<%= link_to 'Voltar', new_product_category_path, class:"btn btn-primary a-btn-slide-text" %>

<%= render partial: 'home/footer' %>